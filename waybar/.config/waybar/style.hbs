$rosewater: #{{rosewater}};
$flamingo: #{{flamingo}};
$pink: #{{pink}};
$mauve: #{{mauve}};
$red: #{{red}};
$maroon: #{{maroon}};
$peach: #{{peach}};
$yellow: #{{yellow}};
$green: #{{green}};
$teal: #{{teal}};
$sky: #{{sky}};
$sapphire: #{{sapphire}};
$blue: #{{blue}};
$lavender: #{{lavender}};
$text: #{{text}};
$subtext1: #{{subtext1}};
$subtext0: #{{subtext0}};
$overlay2: #{{overlay2}};
$overlay1: #{{overlay1}};
$overlay0: #{{overlay0}};
$surface2: #{{surface2}};
$surface1: #{{surface1}};
$surface0: #{{surface0}};
$base: #{{base}};
$mantle: #{{mantle}};
$crust: #{{crust}};

* {
    border: none;
    border-radius: 0;
    font-family: "JetBrainsMono Nerd Font";
    font-weight: bold;
    font-size: 14.2px;
    min-height: 0;
}

window#waybar {
    background: rgba(21, 18, 27, 0);
    color: $text;
}

tooltip {
    background: $base;
    border-radius: 15px;
    border-width: 2.5px;
    border-style: solid;
    border-color: $crust;
}

#workspaces {
  background: $base;
  border-radius: 15px;

  button {
    padding-right: 0px;
    padding-left:  0px;
    color: $flamingo;
    margin-left: 3px;
    
    &.active{
      color: $peach;
    }

    &.focused{
      color: #a6adc8;
      background: #eba0ac;
      border-radius: 15px;
    }

    &.urgent{
      color: $red;
      background: $text;
      border-radius: 15px;
    }

    &.hover{
      background: #11111b;
      color: #cdd6f4;
      border-radius: 15px;
    }
  }
}

#cava,
#window,
#clock,
#battery,
#pulseaudio,
#pulseaudio.microphone,
#network,
#bluetooth,
#custom-notifications,
#custom-updates,
#workspaces,
#tray,
#memory,
#disk,
#backlight {
    background: $base;
    opacity: 1.0;
    padding: 0px 12px;
    margin-top: 1px;
    margin-bottom: 1px;
    border-radius: 15px 15px 15px 15px;
    margin-right: 5px;
    margin-left: 5px;
}

#tray {
    border-radius: 15px;
    margin-right: 5px;
}

#window {
    border-radius: 15px;
    margin-left: 60px;
    margin-right: 60px;
}

#clock {
    color: $green;
    border-radius: 15px 15px 15px 15px;
}

#network {
    color: $yellow;
    border-radius: 15px 15px 15px 15px;
    margin-right: 10px;
}

#custom-notifications {
    color: $mauve;
    border-radius: 15px 15px 15px 15px;
    margin-right: 5px;
    margin-left : 5px;
    padding-right: 2.5px;
    padding-left: 5px;
}

#custom-updates {
    color: #89b4fa;
    border-radius: 15px 15px 15px 15px;
    border-left:  0px;
    border-right: 0px;
    margin-left:  5px;
    margin-right: 0px;
}


#memory {
    color: #89b4fa;
    border-radius: 15px 15px 15px 15px;
    margin-left: 5px;
}

#disk {
    color: #a6e3a1;
    border-radius: 15px 15px 15px 15px;
    margin-left: 5px;
}


#bluetooth {
  color: $blue;
  border-radius: 15px 15px 15px 15px;
  margin-left: 5px;
  margin-right: 5px;
} 

#pulseaudio {
  color: $teal;
  border-radius: 15px 0px 0px 15px;
  margin-right: 0px;

  &.microphone{
    color: $mauve;
    border-radius: 0px 15px 15px 0px;
    margin-left: 0px;
  }
}

#battery {
  color: $green;
  border-radius: 15px 15px 15px 15px;
  margin-right: 5px;
  margin-left: 5px;

  &.critical:not(.charging) {
    background-color:           $red;
    color:                      $lavender;
    animation-name:             blink;
    animation-duration:         0.4s;
    animation-timing-function:  linear;
    animation-iteration-count:  infinite;
    animation-direction:        alternate;
  }
}
